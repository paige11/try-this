<div class="container-fluid">

  <%= link_to :back do %>
    <i class="ion-android-arrow-back"></i> Back
  <% end %>

  <h2><%= @category.name %></h2>
  <%= button_to "Ask a Question", new_question_path, class: "btn btn-primary", method: :get %><br />

  <% @questions.each do |question| %>
    <p>
      <%= link_to question.content, question_path(question) %>
      Submitted by <%= link_to question.user.first_name, user_path(question.user) %>,
      <%= question.formatted_date_time %></p>
    </p>
  <% end %>

</div>
