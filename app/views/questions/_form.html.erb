<%= form_for question do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %><br>
  <p><%= f.label "Categories" %></p>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, question.categories.build do |category_fields| %>
    <%= category_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
