<%= form_for @question do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %><br>
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_id, Category.all, :id, :name %><br>
  <%= f.fields_for :category, @post.category.build do |category_fields| %>
    <%= category_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
