<%= form_for question do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  Question <%= f.text_field :content, label: :content %><br>
  Categories <%= f.collection_check_boxes :category_ids, categories, :id, :name %><br>
  <%= f.fields_for :category_attributes do |category| %>
    New Category <%= category.text_field :name, label: :name %><br>
  <% end %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
